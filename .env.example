# ============================================
# Palet8 Agents API - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENVIRONMENT=development  # development|staging|production
LOG_LEVEL=INFO

# Database Configuration
# Required: PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For Cloud SQL: postgresql://USER:PASSWORD@/cloudsql/PROJECT:REGION:INSTANCE/DATABASE
DATABASE_URL=postgresql://user:password@localhost:5432/palet8_agents

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_BASE=gemini-2.5-flash-lite
GEMINI_MODEL_REASONING=gemini-2.5-flash
GEMINI_MODEL_IMAGE=gemini-2.5-flash-image
GEMINI_THINKING_BUDGET=default

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_ORG_ID=

# Flux 1 Kontext API
FLUX_API_KEY=your_flux_api_key_here
FLUX_API_ENDPOINT=https://api.bfl.ai/v1
FLUX_MODEL_PRO=flux-1-kontext-pro
FLUX_MODEL_MAX=flux-1-kontext-max
FLUX_DEFAULT_MODEL=flux-1-kontext-pro

# Model Selection Defaults
DEFAULT_REASONING_MODEL=gemini  # gemini|chatgpt
DEFAULT_IMAGE_MODEL=flux        # flux|gemini

# Cost Configuration (USD per request)
GEMINI_BASE_COST=0.00005
GEMINI_REASONING_COST=0.0001
GEMINI_IMAGE_COST=0.04
CHATGPT_REASONING_COST=0.005
FLUX_PRO_COST=0.04
FLUX_MAX_COST=0.055

# Performance Thresholds
MAX_REQUEST_TIMEOUT=300
GPU_ENABLED=true
ENABLE_STREAMING=true

# A2A Microservices (Agent-to-Agent Communication)
USE_PRODUCT_A2A=false
PRODUCT_GENERATOR_URL=http://localhost:8081
A2A_AUTH_TOKEN=
A2A_ENABLE_TLS=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_STRUCTURED_LOGGING=true

# Language Constraints
ALLOWED_LANGUAGES=["en"]
DEFAULT_LANGUAGE=en

# Google Cloud Project (for Secret Manager, etc.)
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_PROJECT=your_gcp_project_id

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ============================================
# Phase 5: External Palet8 API Integration
# ============================================
PALET8_API_URL=https://api.palet8.biz
PALET8_API_KEY=SecureApiKey2024ProfileBackend!
PALET8_API_TIMEOUT=10000
